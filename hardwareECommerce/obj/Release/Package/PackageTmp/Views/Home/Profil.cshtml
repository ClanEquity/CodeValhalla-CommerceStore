@using hardwareECommerce.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model user

<section class="siginsection">
    <div style="margin-top: 150px; margin-bottom: 150px;" class="d-flex justify-content-center align-content-center">
        <div class="form-box">
            <div class="form-value">
                <h2>Kullanıcı Bilgileri</h2>
                <div class="inputbox">
                    <ion-icon name="mail-outline"></ion-icon>
                    <input disabled name="userEmail" type="text" value="@Model.userMail" />
                    <label for="" style="top:-5px;">Email</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="mail-outline"></ion-icon>
                    <input disabled name="userEmail" type="text" value="@Model.userName" />
                    <label for="" style="top:-5px;">Kullanıcı Adı</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input readonly name="userPassword" type="text" value="@Model.userPassword" />
                    <label for="" style="top:-5px;">Şifre</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input readonly name="userPassword" type="text" value="@Model.userBalance$" />
                    <label for="" style="top:-5px;">Bakiye</label>
                </div>
                <div>
                    <button onclick="location.href='@Url.Action("LogOut")'" type="button" class="signinbutton">Çıkış Yap</button>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .siginsection {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        background-image: url(../../storeTemplate/images/signinbg.jpg) !important;
        background-repeat: no-repeat !important;
        background-position: center !important;
        background-size: cover !important;
    }

    .form-box {
        position: relative;
        width: 400px;
        height: 500px;
        background: transparent;
        border: 2px solid rgba(255,255,255,0.5);
        border-radius: 20px;
        backdrop-filter: blur(15px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .myHeaderNav {
        background-color: rgba(255,255,255,0) !important;
    }

        .myHeaderNav:hover {
            background-color: rgba(255,255,255,1) !important;
        }

    h2 {
        font-size: 2em;
        color: #fff;
        text-align: center;
    }

    .inputbox {
        position: relative;
        margin: 30px 0;
        width: 310px;
        border-bottom: 2px solid #fff;
    }

        .inputbox label {
            position: absolute;
            top: 50%;
            left: 5px;
            transform: translateY(-50%);
            color: #fff;
            font-size: 1em;
            pointer-events: none;
            transition: .5s;
        }
    .signinbutton {
        width: 100%;
        height: 40px;
        border-radius: 40px;
        background: #fff;
        border: none;
        outline: none;
        cursor: pointer;
        font-size: 1em;
        font-weight: 600;
    }

    .inputbox input {
        width: 100%;
        height: 50px;
        background: transparent;
        border: none;
        outline: none;
        font-size: 1em;
        padding: 0 35px 0 5px;
        color: #fff;
    }
</style>

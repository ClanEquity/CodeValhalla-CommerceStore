@using hardwareECommerce.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<product>

<div style="margin-top:100px;" class="d-flex">

    <div class="container py-5">
        <h1 class="text-center">Ürünler</h1>
        <div class="row row-cols-1 row-cols-sm-2  row-cols-md-3 row-cols-lg-5 g-4 py-5">

            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-img-top d-flex justify-content-end" style="width: 100%; height: 300px; background-image: url(../../@item.productImage); background-repeat: no-repeat; background-position: center; background-size: cover; ">
                            <h6><span class="badge bg-success">@item.productType</span></h6>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.productName</h5>
                            <p class="card-text">
                                @item.productDescription
                            </p>
                        </div>
                        <div class="mb-2 d-flex justify-content-around">
                            <h4>@item.productPrice$</h4>
                        </div>
                        <div class="mb-3 d-flex justify-content-around">
                            <button type="button" onclick="window.location.href = 'addToCart?productID=@item.Id'; " class="btn btn-primary">Sepete Ekle</button>
                        </div>
                        <div class="mb-2 d-flex justify-content-around">
                            <p style="font-size:12px;">Ürün Stok Kodu : @item.productID</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    </div>

<style>
    .card-img-top {
        border-radius: 10px;
        padding: 20px;
    }
    .card {
        height:600px;
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 2px 0px;
    }
    .carImg{
        width:100%;
        height:150px;
        background-image: url(../../storeTemplate/images/rtx4090bg-smal.jpg);
        background-repeat:no-repeat;
        background-position:center;
        background-size:cover;
    }

    .vertical-nav {
        min-width: 12rem;
        width: 12rem;
        height: 100vh;
        top: 0;
        left: 0;
        box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.4s;
    }

    .page-content {
        width: calc(100% - 17rem);
        margin-left: 17rem;
        transition: all 0.4s;
    }
</style>

